{
  "app": {
    "name": "Auth Service",
    "service": "auth-service",
    "instance": "01",
    "version": "v1.0",
    "displayBanner": true,
    "displayVersion": true,
    "secret": "THIS IS USED TO SIGN AND VERIFY JWT TOKENS, REPLACE IT WITH YOUR OWN SECRET, IT CAN BE ANY STRING",
    "refreshTokenTTL": 2,
    "validUnverified": true
  },
  "logger": {
    "enabled": true,
    "level": "Debug",
    "excludePaths": [ "/", "/healthz", "/alive", "/metrics" ],
    "minimumLevelOverrides": {
      "microsoft": "Debug",
      "system": "Debug"
    },
    "console": {
      "enabled": true,
      "enableStructured": false,
      "enableTracing": false,
      "enableMetrics": false
    },
    "file": {
      "enabled": true,
      "path": "logs/logs.txt",
      "interval": "day"
    },
    "tags": {}
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "ConnectionStrings": {
    "AuthLiteDatabase": "Data Source=Genocs.Auth.Lite.db<",
    "AuthLocalDatabase": "Server=(localdb)\\mssqllocaldb;Database=GenocsAuth;Trusted_Connection=True;",
    "AuthDatabase": "Server=(localdb)\\mssqllocaldb;Database=GenocsAuth;Trusted_Connection=True;"
  },
  "AppSettings": {
  },
  "twilio": {
    "smsAccountSid": "<<your Twilio account SID>>",
    "smsAuthToken": "<<your Twilio auth Token>>",
    "smsServiceId": "<<your Twilio Service Id>>"
  },
  "smtp": {
    "from": "<<your ethereal username>>",
    "host": "smtp.ethereal.email",
    "port": 587,
    "username": "<<your ethereal username>>",
    "password": "<<your ethereal password>>"
  },
  "Monitoring": {
    "Jaeger": "localhost"
  }
}